{
  "name": "cometix-tab",
  "displayName": "Cometix-Tab",
  "description": "",
  "publisher": "Haleclipse",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.1"
  },
  "enabledApiProposals": [
    "inlineCompletionsAdditions"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:*",
    "onCommand:cometix-tab.inlineAccept",
    "onCommand:cometix-tab.applyNextEdit",
    "onCommand:cometix-tab.goToCursorPrediction"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cometix-tab.inlineAccept",
        "title": "Cursor Tab: Accept Inline Suggestion"
      },
      {
        "command": "cometix-tab.applyNextEdit",
        "title": "Cursor Tab: Apply Next Edit"
      },
      {
        "command": "cometix-tab.goToCursorPrediction",
        "title": "Cursor Tab: Go To Cursor Prediction"
      }
    ],
    "configuration": {
      "title": "Cometix Tab",
      "properties": {
        "cometixTab.enableInlineSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline suggestions streamed from the Cursor backend."
        },
        "cometixTab.enableCursorPrediction": {
          "type": "boolean",
          "default": true,
          "description": "Enable cursor prediction decorations that highlight likely next locations."
        },
        "cometixTab.enableDiagnosticsHints": {
          "type": "boolean",
          "default": false,
          "description": "Enable experimental diagnostics hints from Cursor (no effect until implemented)."
        },
        "cometixTab.excludedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of VS Code language identifiers where inline suggestions should be disabled."
        },
        "cometixTab.serverUrl": {
          "type": "string",
          "default": "",
          "description": "Optional override for the official Cursor API base URL."
        },
        "cometixTab.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token used when calling Cursor services."
        },
        "cometixTab.clientKey": {
          "type": "string",
          "default": "",
          "description": "Client key or checksum passed to Cursor services. Leave blank to auto-generate."
        },
        "cometixTab.enableAdditionalFilesContext": {
          "type": "boolean",
          "default": true,
          "description": "Include context from recently viewed files in completion requests."
        },
        "cometixTab.cppTriggerInComments": {
          "type": "boolean",
          "default": true,
          "description": "Allow inline suggestions to be triggered while the cursor is in a comment."
        },
        "cometixTab.debug.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug logging for troubleshooting."
        },
        "cometixTab.debug.logStream": {
          "type": "boolean",
          "default": true,
          "description": "Log stream chunks and edit processing."
        },
        "cometixTab.debug.logEditCombine": {
          "type": "boolean",
          "default": true,
          "description": "Log detailed edit combination steps."
        },
        "cometixTab.debug.logFileSync": {
          "type": "boolean",
          "default": true,
          "description": "Log file synchronization operations."
        },
        "cometixTab.debug.logRpc": {
          "type": "boolean",
          "default": true,
          "description": "Log RPC requests and responses."
        },
        "cometixTab.debug.verbosePayloads": {
          "type": "boolean",
          "default": false,
          "description": "Log full payload contents (can be very verbose)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.10.1",
    "@connectrpc/connect": "^1.6.1",
    "@connectrpc/connect-node": "^1.6.1"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
